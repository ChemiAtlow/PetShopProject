@model PaginationData

<section class="pagination">
    @if (Model.CurrentPage != 1 && Model.PreviousPage != 1)
    {
        <a asp-route-page="1">1</a>
    }
    @if (Model.HasPreviousPage && Model.PreviousPage > 2)
    {
        <a class="more">...</a>
    }
    @if (Model.HasPreviousPage)
    {
        <a asp-route-page="@Model.PreviousPage">@Model.PreviousPage</a>
    }
    <a class="active" asp-route-page="@Model.CurrentPage">@Model.CurrentPage</a>
    @if (Model.HasNextPage)
    {
        <a asp-route-page="@Model.NextPage">@Model.NextPage</a>
    }
    @if (Model.HasNextPage && Model.NextPage < Model.LastPage - 1)
    {
        <a class="more">...</a>
    }
    @if (Model.CurrentPage != Model.LastPage && Model.NextPage != Model.LastPage)
    {
        <a asp-route-page="@Model.LastPage">@Model.LastPage</a>
    }
</section>